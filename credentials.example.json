{
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "carrier_board",
    "user": "postgres",
    "password": "your_database_password_here",
    "url": "postgresql://postgres:your_password@localhost:5432/carrier_board"
  },
  "jwt": {
    "secret": "your-super-secret-jwt-key-change-this-to-random-string",
    "algorithm": "HS256",
    "access_token_expire_minutes": 30,
    "refresh_token_expire_days": 7
  },
  "fmcsa": {
    "api_key": "your_fmcsa_api_key_here",
    "api_url": "https://mobile.fmcsa.dot.gov/qc/services/carriers",
    "timeout": 10
  },
  "email": {
    "smtp_host": "smtp.gmail.com",
    "smtp_port": 587,
    "smtp_user": "your-email@gmail.com",
    "smtp_password": "your-app-password",
    "from_email": "noreply@carrierboard.com"
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "url": "redis://localhost:6379",
    "password": null
  },
  "aws": {
    "access_key_id": "your_aws_access_key",
    "secret_access_key": "your_aws_secret_key",
    "s3_bucket": "carrier-board-uploads",
    "region": "us-east-1"
  },
  "frontend": {
    "url": "http://localhost:3000",
    "cors_origins": ["http://localhost:3000", "http://127.0.0.1:3000"]
  },
  "backend": {
    "url": "http://localhost:8000",
    "debug": true,
    "port": 8000
  },
  "security": {
    "rate_limit_per_minute": 60,
    "rate_limit_per_hour": 1000,
    "bcrypt_rounds": 12
  },
  "monitoring": {
    "sentry_dsn": "your_sentry_dsn_here",
    "log_level": "INFO"
  }
}
